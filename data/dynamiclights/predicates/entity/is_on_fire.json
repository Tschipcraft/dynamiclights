  {
    "//comment": "This predicate returns true, if the tested entity is on fire and this feature is enabled",
    "condition": "minecraft:value_check",
    "value": {
      "type": "minecraft:score",
      "target": {
        "type": "minecraft:fixed",
        "name": "$enable_on_fire"
